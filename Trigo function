#include <stdio.h>
#include <math.h>

float Trigo(int, int);
int square(int);

int main() {
    int a, b;
    float c;
    printf("Please input 2 adjacent sides of the right triangle:");
    scanf("%d %d", &a, &b);
    c = Trigo(a, b);
    printf("The third side is %.2f\n", c);
    return 0;
}

float Trigo(int x, int y) {
    //  z=sqrt(x^2+y^2);
    int x_sq = square(x);
    int y_sq = square(y);
    float z = sqrt(x_sq + y_sq);
    return z;
}

int square(int x) {
    return x * x;
}
