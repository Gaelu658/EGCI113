#include <stdio.h>
#include <stdlib.h>
#define Size 3

int main()
{
    int i;
    int x[Size];
    for(i=0;i<Size;i++){
    //take all array elements in
       printf("Input number in [%d]",i+1,Size);
       scanf("%d",&x[i]);
    }

    for(i=0;i<Size;i++)
        printf("%3d",x[i]);

    return 0;
}
